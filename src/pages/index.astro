---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const allEvents: CollectionEntry<'events'>[] = await getCollection('events');
const sortedEvents = allEvents.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="My Portfolio">
  <main>
    <section class="mb-12 text-center">
      <h1 class="text-3xl font-bold mb-2">Riku Yamamoto</h1>
      <h3 class="text-3xl font-bold mb-2"><a href="https://x.com/warisuno">X @warisuno</a></h3>
      <h3><a href="https://github.com/F0rte">GitHub @F0rte</a></h3>
      <h3><a href="https://qiita.com/warisuno">Qiita @warisuno</a></h3>
      <p><a href="https://qiita.com/advent-calendar/2025/progate-path">Progate Path コミュニティ Advent Calendar 2025</a>参加・運営中!</p>
      <p class="text-gray-600">Python / SQL / AWS</p>
    </section>

    <section class="mb-12">
      <h2 class="text-xl font-bold border-b mb-4 pb-2">Biography</h2>
      <ul class="space-y-2">
        <li><span class="font-bold text-gray-500 mr-4">2021.04</span> 埼玉大学 理学部物理学科 入学</li>
		<li><span class="font-bold text-gray-500 mr-4">2024.03</span> 基本情報技術者試験 合格</li>
		<li><span class="font-bold text-gray-500 mr-4">2024.04~</span> 株式会社Nuco インターン勤務</li>
		<li><span class="font-bold text-gray-500 mr-4">2025.05~</span> Progate 公式Discordサーバー コミュニティ運営部</li>
		<li><span class="font-bold text-gray-500 mr-4">2025.08</span> 株式会社Progate 5daysインターン</li>
        <li><span class="font-bold text-gray-500 mr-4">2026.03</span> 埼玉大学 中退予定</li>
      </ul>
    </section>

    <section>
      <h2 class="text-xl font-bold border-b mb-4 pb-2">Events</h2>
      <div class="space-y-6">
        {sortedEvents.map((event) => (
          <a href={`/events/${event.slug}`} class="block hover:bg-gray-50 p-4 -mx-4 rounded transition">
            <h3 class="text-lg font-bold text-blue-600">{event.data.title} ({event.data.date.toLocaleDateString("ja")})</h3>
          </a>
        ))}
      </div>
    </section>
  </main>
</Layout>
