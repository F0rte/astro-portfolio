---
const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
    </head>
    <body class="bg-white text-gray-800 max-w-3xl mx-auto px-4 py-8">
    <slot />
    </body>
</html>
